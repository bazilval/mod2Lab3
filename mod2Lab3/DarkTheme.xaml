<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Gray"/>
        <Setter Property="Control.Foreground" Value="Wheat"/>
    </Style>
    <Style x:Key="IndentStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Padding" Value="5"/>
        <Setter Property="Control.Margin" Value="5"/>
    </Style>
    <Style x:Key="BorderStyle" BasedOn="{StaticResource IndentStyle}">
        <Setter Property="ComboBox.BorderBrush" Value="Wheat"/>
    </Style>
    <Style x:Key="TBStyle" BasedOn="{StaticResource BorderStyle}">
        <Setter Property="TextBox.Background" Value="DarkGray"/>
    </Style>
    <Style x:Key="RBStyle" BasedOn="{StaticResource BorderStyle}">
        <Setter Property="RadioButton.Margin" Value="0"/>
        <Setter Property="RadioButton.Padding" Value="0"/>
    </Style>
    <Style x:Key="BlackRBStyle" BasedOn="{StaticResource RBStyle}">
        <Setter Property="RadioButton.Content" Value="Белый"/>
    </Style>
    <Style x:Key="BtnStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Button.Margin" Value="5"/>
    </Style>
</ResourceDictionary>